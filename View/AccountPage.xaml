<Page x:Class="FinSimLauncher.View.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinSimLauncher.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="1" Source="/View/Res/Icons/FinSimRound.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="60" Margin="40, 30, 30, 30"></Image>
        <Label Content="Account name" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,45,30,30" Foreground="#b3adf9"/>
        <Label Name="AccountName" Content="AccountName" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="300,40,30,30" FontSize="23" Grid.Row="1" Grid.Column="1" Loaded="AccountName_Loaded" Foreground="#b3adf9"/>
    </Grid>
    
</Page>
